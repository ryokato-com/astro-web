---
import "../../styles/global.css"; // ✅ これで正しい


const { searchParams } = new URL(Astro.request.url);
const username = searchParams.get('username') ?? '名無し';
const email = searchParams.get('email') ?? '不明';
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>ようこそ</title>
  </head>
  <body class="min-h-screen bg-blue-50 flex flex-col justify-center items-center text-center">
    <div class="bg-white p-10 rounded shadow-md max-w-md w-full">
      <h1 class="text-2xl font-bold text-blue-700 mb-4">ようこそ、{username}さん！</h1>
      <p class="text-lg mb-2">登録されたメールアドレス：</p>
      <p class="font-mono text-blue-600">{email}</p>
      <a href="/" class="mt-6 inline-block bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">
        戻る
      </a>
    </div>
  </body>
</html>
